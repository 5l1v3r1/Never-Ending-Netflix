{
  "manifest_version": 2,
  "name": "Never Ending Netflix",
  "description": "Automatically play next episode, skip title sequences, skip \"Are you still watching?\" prompts, and search over 3000 genres!",
  "version": "1.4",
  "permissions": [
    "*://*.netflix.com/*",
    "*://*.netflix.co.uk/*",
    "*://*.netflix.ar/*",
    "*://*.netflix.au/*",
    "*://*.netflix.br/*",
    "*://*.netflix.ca/*",
    "*://*.netflix.fr/*",
    "*://*.netflix.de/*",
    "*://*.netflix.cz/*",
    "*://*.netflix.hk/*",
    "*://*.netflix.in/*",
    "*://*.netflix.jp/*",
    "*://*.netflix.lt/*",
    "*://*.netflix.no/*",
    "*://*.netflix.nl/*",
    "*://*.netflix.pl/*",
    "*://*.netflix.ru/*",
    "*://*.netflix.sg/*",
    "*://*.netflix.sk/*",
    "*://*.netflix.es/*",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.netflix.com/*",
        "*://*.netflix.co.uk/*",
        "*://*.netflix.ar/*",
        "*://*.netflix.au/*",
        "*://*.netflix.br/*",
        "*://*.netflix.ca/*",
        "*://*.netflix.fr/*",
        "*://*.netflix.de/*",
        "*://*.netflix.cz/*",
        "*://*.netflix.hk/*",
        "*://*.netflix.in/*",
        "*://*.netflix.jp/*",
        "*://*.netflix.lt/*",
        "*://*.netflix.no/*",
        "*://*.netflix.nl/*",
        "*://*.netflix.pl/*",
        "*://*.netflix.ru/*",
        "*://*.netflix.sg/*",
        "*://*.netflix.sk/*",
        "*://*.netflix.es/*"
      ],
      "js": [
        "js/jquery.js",
        "js/common.js",
        "NEN.js"
      ]
    }
  ],
  "icons": {
    "64": "images/icon64.png",
    "32": "images/icon32.png",
    "38": "images/icon.png",
    "128": "images/icon128.png"
  },
  "background": {
    "persistent": true,
    "scripts": [
      "js/common.js",
      "js/hot-reload.js"
    ]
  },
  "browser_action": {
    "default_popup": "html/popup.html",
    "default_title": "Never Ending Netflix"
  },
  "homepage_url": "https://jonlu.ca",
  "web_accessible_resources": [
    "js/*",
    "data/*"
  ]
}